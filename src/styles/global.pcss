*, *::before, *::after {
  box-sizing: border-box;
}

:root {
  --font-family-primary: "Atkinson Hyperlegible";
  --font-family-secondary: "Neonderthaw";

  --nice-pink: #fd5da8;
  --nice-blue: #6efdff;

  --side-padding: 20px;
  --text-content-width: min(840px, calc(100vw - (var(--side-padding) * 2)));
}

body {
	font-family: var(--font-family-primary), sans-serif;
	margin: auto;
	text-align: left;
	background-color: #000;
	word-wrap: break-word;
	overflow-wrap: break-word;
	line-height: 1.5;
	color: #eee;
  font-size: 24px;
}
:where(:--heading,
strong,
b) {
	color: #fff;
}
nav a {
	margin-right: 10px;
}
textarea {
	width: 100%;
	font-size: 16px;
}
input {
	font-size: 16px;
}
content {
	line-height: 1.6;
}
table {
	width: 100%;
}
:where(img) {
	max-width: 100%;
	height: auto;
}
code {
	padding: 2px 5px;
	background-color: #121212;
}
pre {
	padding: 1rem;
}
pre > code {
	all: unset;
}
blockquote {
	border: 1px solid #999;
	color: #eee;
	padding: 2px 0px 2px 20px;
	margin: 0px;
	font-style: italic;
}

:any-link {
  color: var(--nice-blue);
  transition: text-shadow 250ms ease;

  &:hover, &:focus {
    transition: text-shadow 150ms ease;
    text-shadow: 0px 0px 12px var(--nice-blue);
  }
}

p + p {
  margin-top: 19px;
}

:focus {
  outline: solid 3px var(--nice-blue);
  outline-offset: 3px;
}

::selection {
  background-color: var(--nice-blue);
  color: black
}

.max-lines {
  --max-lines: 2;

  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: var(--max-lines);
}